<%- include('header') %>

<div class="anime-container">
    <h1><%= __('ANIME_SEARCH') %></h1>
    <form action="/anime" method="post">
        <input type="text" name="query" placeholder="<%= __('ENTER_ANIME_TITLE') %>" required>
        <button type="submit"><%= __('SEARCH') %></button>
    </form>

    <% if (animes) { %>
        <div class="anime-list">
            <% animes.forEach(anime => { %>
                <a href="/anime/<%= anime.mal_id %>" class="anime-card-link">
                    <div class="anime-card">
                        <img src="<%= anime.images.jpg.image_url %>" alt="Anime cover">
                        <div class="anime-card-container">
                            <h2 class="anime-card-title"><%= anime.title %></h2>
                            <p class="anime-card-description"><%= anime.synopsis %></p>
                        </div>
                    </div>
                </a>
            <% }); %>
        </div>
    <% } else if (typeof errorMessage !== 'undefined') { %>
        <p class="error-message"><%= errorMessage %></p>
    <% } %>
</div>

<%- include('footer') %>
