<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Page Title</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
<%- include('header') %>

<div class="center">
    <div class="top-carousel-container">
        <div class="carousel-wrapper">
            <h2>Top Anime Right Now</h2>
            <div id="topAnimeCarousel" class="carousel slide topCarousel" data-ride="carousel">
                <div class="carousel-inner">
                    <% topAnimes.forEach((anime, index) => { %>
                        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                            <div class="anime-item-container">
                                <img class="anime-cover" src="<%= anime.images.jpg.image_url %>" alt="<%= anime.title %>">
                                <div class="anime-info">
                                    <h3 class="anime-title"><%= anime.title %></h3>
                                    <p class="anime-description"><%= anime.synopsis %></p>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <a class="carousel-control-prev" href="#topAnimeCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#topAnimeCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="carousel-wrapper">
            <h2>Top Manga Right Now</h2>
            <div id="topMangaCarousel" class="carousel slide topCarousel" data-ride="carousel">
                <div class="carousel-inner">
                    <% topMangas.forEach((manga, index) => { %>
                        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                            <div class="anime-item-container">
                                <img class="anime-cover" src="<%= manga.images.jpg.image_url %>" alt="<%= manga.title %>">
                                <div class="anime-info">
                                    <h3 class="anime-title"><%= manga.title %></h3>
                                    <p class="anime-description"><%= manga.synopsis %></p>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <a class="carousel-control-prev" href="#topMangaCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#topMangaCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <hr class="divider">

    <!-- Баннеры ниже карусели -->
    <div class="banner-row">
        <% banners.forEach(banner => { %>
            <div class="banner-container">
                <h2><%= banner.title %></h2>
                <div id="bannerCarousel-<%= banner._id %>" class="carousel slide topCarousel" data-ride="carousel">
                    <div class="carousel-inner">
                        <% banner.mediaData.forEach((mediaItem, index) => { %>
                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                <div class="item-container">
                                    <img class="cover" src="<%= mediaItem.images.jpg.image_url %>" alt="<%= mediaItem.title %>">
                                    <div class="info">
                                        <h3 class="title"><%= mediaItem.title %></h3>
                                        <p class="description"><%= mediaItem.synopsis %></p>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    <a class="carousel-control-prev" href="#bannerCarousel-<%= banner._id %>" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#bannerCarousel-<%= banner._id %>" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('footer') %>
<script src="script.js"></script>
</body>
</html>
